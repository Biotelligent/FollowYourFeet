<Alloy>
	<View id="mainview" class="feet-view-main" >
    <Require src="NavBar" type="view" id="navbar" title="L('menu-apiep', 'Puppet Controller')"/>
      <View id="colorView" class="feet-view-inner" backgroundColor="black" layout="vertical" xonClick="handleBackgroundClick" borderWidth="0" borderColor="black">

      <Label id="headingLabel" class="settingslabel" top="0" left="10" right="10" textAlign="center" borderColor="transparent" borderWidth="0" text="Direction"/>
      <View id="seriesView" top="30" height="Ti.UI.SIZE" width="Ti.UI.FILL" layout="absolute">
        <Button id="buttonForward"  xclass="iconbutton" top="0" left="100" right="100" height="100"
                backgroundImage="/images/front.png"
                onClick="handleButtonClick"

        />
          <Button id="button01L"  xclass="iconbutton" top="50" left="10" width="100" height="100"
                  backgroundImage="/images/SlowLeft.png"
                  onClick="handleButtonClick"

          />
          <Button id="button01R"  xclass="iconbutton" top="47" right="34" width="100" height="100"
                  backgroundImage="/images/SlowRight.png"
                  onClick="handleButtonClick"

          />

          <Button id="buttonLeft"  xclass="iconbutton" top="150" left="10" width="100" height="100"
                  backgroundImage="/images/left.png"
                  onClick="handleButtonClick"

          />
          <Button id="buttonRight"  xclass="iconbutton" top="150" right="10" width="100" height="100"
                  backgroundImage="/images/right.png"
                  onClick="handleButtonClick"

          />
          <Button id="buttonStop"  xclass="iconbutton" top="250" left="100" right="100" height="100"
                  backgroundImage="/images/stop.png"
                  onClick="handleButtonClick"

          />
      </View>

      <View id="colorSliderView" top="20" layout="absolute">  
         <Label id="colorLabel" class="settingslabel" top="10" left="10" text="Off"/>
         <Slider id="colorSlider" top="5" left="60" right="20" min="-60" max="60" value="0" onChange="handleColorSliderChange"/>
       </View>

    </View>
   </View>
</Alloy>